{
  "manifest_version": 2,
  "name": "digitalmarketplace-logdia",
  "homepage_url": "https://github.com/alphagov/digitalmarketplace-logdia",
  "version": "0.3",

  "description": "Allows 1-click log diagram generation directly from kibana",

  "icons": {
    "16": "icons/digitalmarketplace-logdia-16.png",
    "19": "icons/digitalmarketplace-logdia-19.png",
    "24": "icons/digitalmarketplace-logdia-24.png",
    "38": "icons/digitalmarketplace-logdia-38.png",
    "48": "icons/digitalmarketplace-logdia-48.png"
  },

  "page_action": {
    "default_icon": "icons/digitalmarketplace-logdia-38.png",
    "default_title": "Generate logdia from log entries in this view"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
     ]
  },

  "permissions": [
    "https://kibana.logit.io/*",
    "webNavigation"
  ],

  "web_accessible_resources": [
    "xhr-monkeypatcher.js",
    "browser-polyfill.js"
    "icons/*"
  ]
}
